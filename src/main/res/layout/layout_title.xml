<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_title_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/top_title_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin20" />

    <RelativeLayout
        android:id="@+id/rl_title_bg"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin10"
            android:clickable="true"
            android:focusable="true"
            android:src="@mipmap/back"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:id="@+id/tv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize18"
            tools:ignore="RelativeOverlap"
            tools:text="标题" />

        <TextView
            android:id="@+id/tv_title_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin20"
            android:textColor="@color/share"
            android:textSize="@dimen/textsize16"
            tools:ignore="ContentDescription,RelativeOverlap,RtlHardcoded" />

        <ImageView
            android:id="@+id/iv_title_share"
            android:layout_width="@dimen/margin20"
            android:layout_height="@dimen/margin20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin20"
            tools:ignore="ContentDescription,RelativeOverlap,RtlHardcoded" />
    </RelativeLayout>
</LinearLayout>